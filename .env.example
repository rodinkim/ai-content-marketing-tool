# Flask 설정
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# AWS 설정
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# AWS Bedrock 설정
BEDROCK_REGION=us-east-1
CLAUDE_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
TITAN_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0

# 데이터베이스 설정
DATABASE_URL=mysql+pymysql://username:password@localhost/ai_content_tool
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ai_content_tool
DB_USER=username
DB_PASSWORD=password

# S3 설정
S3_BUCKET_NAME=ai-content-knowledge-base
S3_REGION=us-east-1

# RAG 설정
FAISS_INDEX_PATH=./data/faiss_index/
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5

# API 설정
API_RATE_LIMIT=100  # 시간당 요청 제한
MAX_CONTENT_LENGTH=10000  # 최대 콘텐츠 길이

# 로깅
LOG_LEVEL=INFO
LOG_FILE=app.log